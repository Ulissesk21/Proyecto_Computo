<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".capa_aplicacion.activity_dialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/pantallas"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/logo_empresa_foreground" />

        </RelativeLayout>

        <TextView
            android:id="@+id/nombreusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/alegreya_sc"
            android:includeFontPadding="false"
            android:text="Entrega Realizada\n           Con Exito"
            android:textColor="@color/texto_pantallas"
            android:textSize="30dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/mapa"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#4351A1"
        android:text="Regresar al Menu Principal" />

</LinearLayout>